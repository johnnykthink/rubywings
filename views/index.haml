%h1 Ruby Wings, Ruby Words.
%ul
  %li
    %a{:href => "weibo"} Connect to Weibo
    -if $user && session['weibo_uid']
      %a{:href => "signout_weibo"} Sign out Weibo
    -else
  %li
    %a{:href => "twitter"} Connect to Twitter
    -if $user && session['twitter_uid']
      %a{:href => "signout_twitter"} Sign out Twitter
    -else
  %li
    -if $user
      %span=$user['name']
      %a{:href => "signout"} Sign out
    -else
      %a{:href => "/auth/open_id"} Sign in
%hr
-if $user
  %form{:action => "/update",
        :method => "POST",
        :enctype => "multipart/form-data"}
    .row
      %textarea#status{:name => "status", :cols => "62", :rows => "5"}
    .row
      %input#tags{:name => 'tags',  :type => 'input'}
    .row
      %input#file{:name => 'file',  :type => 'file'}
    .row
      %input{:type => "submit", :value => "Ruby Wings"}
